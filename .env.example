# Mobius 1 Platform - Environment Configuration
# Copy this file to .env and update with your values

# ============================================================================
# APPLICATION
# ============================================================================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://mobius1:mobius1_dev@localhost:5432/mobius1?schema=public

# ============================================================================
# REDIS
# ============================================================================
REDIS_URL=redis://localhost:6379

# ============================================================================
# MINIO (Object Storage)
# ============================================================================
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false

# ============================================================================
# QDRANT (Vector Database)
# ============================================================================
QDRANT_URL=http://localhost:6333

# ============================================================================
# SECURITY
# ============================================================================
# JWT Secret - MUST be at least 32 characters
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars

# Encryption Key - MUST be exactly 32 characters (for AES-256)
ENCRYPTION_KEY=12345678901234567890123456789012

# TLS Configuration (optional - for production)
TLS_ENABLED=false
TLS_CERT_PATH=./certs/server.crt
TLS_KEY_PATH=./certs/server.key
TLS_CA_PATH=./certs/ca.crt

# ============================================================================
# COMPLIANCE
# ============================================================================
# Spain-only data residency enforcement
SPAIN_RESIDENCY_MODE=true

# Air-gapped deployment mode (offline operation)
AIRGAP_MODE=false
AIRGAP_NETWORK_ISOLATION=true
AIRGAP_INTEGRITY_CHECKS=true

# AESIA compliance version
AESIA_VERSION=aesia-1.0

# Digital signing for audit packages
COMPLIANCE_ENABLE_SIGNING=true
COMPLIANCE_PRIVATE_KEY_PATH=./keys/compliance-private.pem
COMPLIANCE_PUBLIC_KEY_PATH=./keys/compliance-public.pem

# Audit retention (7 years = 2555 days)
COMPLIANCE_AUDIT_RETENTION_DAYS=2555

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=info
LOG_REDACT_PII=true

# ============================================================================
# AUDIT
# ============================================================================
AUDIT_RETENTION_DAYS=2555

# ============================================================================
# RUNTIME (AI Models)
# ============================================================================
RUNTIME_DEFAULT_BACKEND=ollama

# vLLM Configuration
VLLM_ENABLED=false
VLLM_ENDPOINT=http://localhost:8000
VLLM_API_KEY=
VLLM_MAX_MODELS=5

# Ollama Configuration
OLLAMA_ENDPOINT=http://localhost:11434
OLLAMA_MODEL_PATH=/models
OLLAMA_MAX_MODELS=3

# NVIDIA NIM Configuration
NVIDIA_NIM_ENABLED=false
NVIDIA_NIM_ENDPOINT=
NVIDIA_NIM_API_KEY=
NVIDIA_NIM_ORG_ID=

# Runtime Performance
RUNTIME_METRICS_INTERVAL=30000
RUNTIME_HEALTH_CHECK_INTERVAL=60000
RUNTIME_MAX_CONCURRENT=50
RUNTIME_DEFAULT_TIMEOUT=30000

# ============================================================================
# FIGMA (Design Integration)
# ============================================================================
# Figma Personal Access Token for MCP integration
# Get your token from: https://www.figma.com/developers/api#access-tokens
FIGMA_PERSONAL_ACCESS_TOKEN=your-figma-personal-access-token-here
